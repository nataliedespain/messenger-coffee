{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "header",
        "content": "Site info"
      },
      {
        "type": "image_picker",
        "id": "small_logo",
        "label": "Small logo"
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "payment_icons",
        "label": "Payment icons"
      },
      {
        "type": "header",
        "content": "Footer menu"
      },
      {
        "type": "text",
        "id": "list_title",
        "label": "Menu title",
        "default": "Info"
      },
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "First menu",
        "default": "footer"
      },
      {
        "type": "header",
        "content": "Subscribe"
      },
      {
        "type": "text",
        "id": "subscribe_title",
        "label": "Subscribe title",
        "default": "Subscribe"
      },
      {
        "type": "text",
        "id": "subscribe_label",
        "label": "Subscribe label",
        "default": "Signup to get the latest news..."
      },
      {
        "type": "text",
        "id": "subscribe_action",
        "label": "Mailchimp action URL"
      }
    ]
  }

{% endschema %}
