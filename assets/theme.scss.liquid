    display: none;
  }
}

/*================ General Page Content ================*/
.contentsCenter {
	margin: 0 auto;
}

.page--text-content {
	margin: 0 auto;
	max-width: $grid-medium;
	text-align: center;
}

.page-title--container {
	text-align: center;

	.page-title__large {
		text-transform: uppercase;
		font-family: "Gotham Thin";
		letter-spacing: 5px;
		font-size: 45px;
	}
}

.page--divider {
	border: 2px solid #CCCCCC;
	margin: 30px 0;
	box-sizing: border-box;
}

/*================ Contact Us Page ================*/
.contact-page--info {
	.product__title {
		text-transform: uppercase;
		text-align: center;
		font-family: "Gotham Medium";
		letter-spacing: 1.3px;

		@media screen and (max-width: $grid-small){
			font-size: 13px;
		}
	}


	.contact-page--address {
		margin-right: 20px;

		@media screen and (max-width: $grid-medium){
			display: block;
		}
	}
	
	.icon-svg {
		margin-top: 5px;
		vertical-align: middle;
	}

	svg {
		stroke: #999999;
		height: 20px;
		width: 20px;
	}
}

.form-container {
	max-width: $grid-medium;
	margin: 40px auto;
	text-align: center;
	display: flex;
	flex-wrap: wrap;

	.form-container--left, .form-container--right {
		width: 50%;
		padding: 10px;

		@media screen and (max-width: $grid-medium){
			width: 100%;
		}

		.form-box__input-group {
			width: 100%;
			min-width: 0;
		}

		.form-box__input-textbox {
			height: 156px;
		}
	}

	.contact-page--button {
		margin: 0 auto;

		#contact-page--clear {
			text-decoration: underline;

			&:hover {
				cursor: pointer;
			}
		}
	}
}


/*================ Cart Page ================*/
.cart--container {
	width: $grid-large;
	margin: 0 auto;
}


/*================ Login Us Page ================*/
.login--container {
	background: #e8e8e8;
	text-align: center;
	padding: 20px;
	margin-bottom: 200px;

	a {
		color: #999999;
		font-family: "Gotham Medium";
	}

	.login--action-text {
		text-align: right;

		a {
			margin-left: 5px;
		}
	}

	.login--button {
		width: 100%;
		padding: 10px;
	}
 
	.login--actions {
		margin: 10px auto 0 auto;
	}
}





